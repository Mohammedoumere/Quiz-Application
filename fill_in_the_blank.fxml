<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="660.0" prefWidth="1106.0" spacing="15" stylesheets="@quiz.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.FillInTheBlankController">
    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

    <Label fx:id="titleLabel" styleClass="title-label" text="Quiz Challenge" />
    <Label fx:id="questionLabel" prefHeight="134.0" prefWidth="1066.0" styleClass="question-label" wrapText="true" />

    <HBox fx:id="answerBox" alignment="CENTER" prefHeight="68.0" prefWidth="1066.0" spacing="10">
        <TextField fx:id="answerField" prefHeight="63.0" prefWidth="872.0" promptText="Type your answer here" />
        <Button fx:id="submitAnswerBtn" onAction="#handleSubmitAnswer" text="Submit" />
    </HBox>

    <Label fx:id="answerStatusLabel" visible="false" />
    <Label fx:id="scoreLabel" styleClass="score-label" text="Score: 0/0" />
    <Label fx:id="statusLabel" styleClass="status-label" text="Loading..." wrapText="true" />

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="skipBtn" onAction="#handleSkip" styleClass="control-button" text="Skip" />
        <Button fx:id="nextBtn" onAction="#handleNext" styleClass="control-button" text="Next" />
        <Button fx:id="exitBtn" onAction="#handleExit" styleClass="control-button" text="Exit" />
    </HBox>
</VBox>
