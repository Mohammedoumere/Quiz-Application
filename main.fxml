<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" styleClass="main-app-background" stylesheets="@quiz.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.MainController">

    <left>
        <VBox spacing="10" styleClass="left-sidebar" stylesheets="@quiz.css">
            <Button fx:id="homeButton" onAction="#showHome" styleClass="nav-button" text="Home/Quizzes" />
            <Button fx:id="categoriesButton" onAction="#showCategories" styleClass="nav-button" text="Categories" />
            <Button fx:id="profileButton" onAction="#showProfile" styleClass="nav-button" text="Profile/Stats" />
            <Button fx:id="settingsButton" onAction="#showSettings" styleClass="nav-button" text="Settings" />
         <effect>
            <Shadow />
         </effect>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED">
            <VBox fx:id="contentArea" alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                <Label style="-fx-font-size: 18px;" text="Welcome! Select a category from the left." />
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
